<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/header_gradient"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvQueueStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUEUE STATUS"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvLastCallLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Call"
                android:textColor="#FFFFFF"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvLastCallNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="003"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_below="@id/tvLastCallLabel"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <!-- Queue Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On Queue"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvQueueNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="003"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#C62828" />

        <!-- Time Last -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time last  : 09.59"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btnCancelQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Queue"
            android:textColor="#FFFFFF"
            android:backgroundTint="#C62828"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

        <!-- Map Placeholder -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service HP Cepat"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
